/////////////////////////////////////////////////////////////////////
// Unblock Exit
/////////////////////////////////////////////////////////////////////
IF
  Global("MO_UthaedeolChat","MOBHA8",2)
  Dead("mobha44")
  Global("DoorOpenmobha8","mobha8",0)
THEN 
    RESPONSE #100
      TriggerActivation("TrMOBHA0",TRUE)
      TriggerActivation("TrMOBHA1",TRUE)
      SetGlobal("DoorOpenmobha8","mobha8",1)
END